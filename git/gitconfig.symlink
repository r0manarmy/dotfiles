[alias]
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  fix = "!f() { nvim -p `git diff --name-only | uniq`; }; f"
[core]
  autocrlf = input
  editor = nvim
  ignorecase = true
  ;pager = delta
[diff]
  algorithm = histogram
[commit]
  template = ~/.gitmessage
[push]
  default = tracking
[branch]
  autosetuprebase = always
[include]
  path = ~/.gitconfig.local
[init]
  defaultBranch = main
[merge]
  conflictstyle = zdiff3
